<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Campus Recruit</title>
    <style>
        
      @import url('https://fonts.googleapis.com/css?family=Raleway');

      * {
        font-family: 'Raleway', sans-serif;
      }
      
      body {
        margin: 0;
        padding: 0;
      }
      
      .main-container {
        width: 100%;
        height: 100vh;
        background: #d4d8da;
        transition: 0.4s linear;
      }
      
      .box {
        width: 1000px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: rgba(0, 0, 0, .8);
        padding: 40px;
        box-sizing: border-box;
        box-shadow: 0px 15px 25px rgba(0, 0, 0, .5);
        border-radius: 10px;
      }
      
      .box h2 {
        margin: 0 0 30px;
        padding: 0;
        color: #fff;
        text-align: center;
      }
      
      .box p {
        margin-bottom: 0;
      }
      
      .box p:nth-child(even) {
        margin-top: 0;
      }
      
      .box a {
        color: #9a9d9e;
        font-size: 14px;
        text-decoration: none;
      }
      
      .box .row {
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      .box .input-box {
        position: relative;
        margin: 5px;
      }

      .box .fn , .ln
      {
        width: 45%;
      }

      .box .cn , .si , .ei
      {
        width: 30%;
      }

      .box .co , .br , .sem , .yr
      {
        width: 23%;
      }
      
      .box .input-box input {
        width: 100%;
        padding: 10px 0;
        font-size: 16px;
        margin-bottom: 30px;
        color: #fff;
        border: 1px solid #fff;
        border: none;
        border-bottom-style: solid;
        outline: none;
        letter-spacing: 1px;
        background: transparent;
      }
      
      .box .input-box label {
        position: absolute;
        color: #fff;
        top: 0;
        left: 0;
        padding: 10px 0;
        font-size: 16px;
        pointer-events: none;
        transition: .5s;
      }
      
      .box .input-box input:focus ~ label,
      .box .input-box input:valid ~ label{
        top: -25px;
        left: 0;
        color: #03a9f4;
        font-size: 12px;
      }

      .box .input-box input:-webkit-autofill ~ label {
        top: -25px;
        left: 0;
        color: #03a9f4;
        font-size: 12px;
        pointer-events: none; /* This will prevent interaction with the autofill label */
      }
      
      .submitBox
      {
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .submit {
        background: transparent;
        border: none;
        outline: none;
        background: #03a9f4;
        color: #fff;
        padding: 10px 20px;
        cursor: pointer;
        border-radius: 5px;
        border: 2px solid #03a9f4;
      }

      .submit:hover
      {
        background: black;
        color: #03a9f4;
        border: 2px solid #03a9f4;
      }
      
      .bottom
      {
        display: flex;
        align-items: center;
        justify-content: space-evenly;
        margin-top: 2rem;
      }

      .bottom a:hover
      {
        color: #03a9f4
      }

      #logged-in {
        width: 100%;
        height: auto;
        text-align: center;
        margin: auto;
        position: absolute;
        top: 50px;
        display: none;
      }
      
      .login-true {
        opacity: 0;
      }

    </style>
    <script>
      var sub, user, pass, mainContent, loggedIn;
      var loggedIn = document.querySelector('.logged-in')
      
      function _(x) {
        return document.getElementById(x);
      }
      
      sub = _('submit');
      user = _('user-name');
      pass = _('user-pass');
      mainContent = _('main');
      loggedIn = _('logged-in');
      
      sub.addEventListener('click', login);
      
      function login(event) {
        event.preventDefault();
        var userValue = user.value;
        var passValue = pass.value;
        
        if (userValue.length >= 3 && passValue.length >= 3) {_
            mainContent.classList.add('login-true');
            loggedIn.style.display = 'block';
            loggedIn.innerHTML = '<h2>Welcome, ' + userValue + '</h2>';
         } else {
           alert('Username and Password must contain at least 3 characters.')
         }
      }
    </script>
</head>
<body>
  <div id="main" class="main-container">
    <div class="box">
      <h2>Student Register</h2>
      <form>
        <div class="row">
            <div class="input-box fn">
                <input id="firstName" class="firstName" type="text" name="" required="">
                <label>First Name</label>
            </div>
            <div class="input-box ln">
                <input id="lastName" class="lastName" type="text" name="" required="">
                <label>Last Name</label>
            </div>
        </div>

        <div class="row">            
            <div class="input-box si">
                <input id="studentId" class="studentId" type="number" name="" required="">
                <label>Student Id</label>
            </div>
            <div class="input-box ei">
                <input id="emailId" class="emailId" type="email" name="" required="">
                <label>Email Id</label>
            </div>
            <div class="input-box cn">
                <input id="contactNumber" class="contactNumber" type="number" name="" required="">
                <label>Contact Number</label>
            </div>
        </div>

        <div class="row">
            <div class="input-box co">
                <input id="course" class="course" type="text" name="" required="">
                <label>Course</label>
            </div>
            <div class="input-box br">
                <input id="branch" class="branch" type="text" name="" required="">
                <!-- <select id="branch" class="branch" type="text" name="" required>
                  <option value="CE">CE</option>
                  <option value="CSE">CSE</option>
                  <option value="ME">ME</option>
                  <option value="EE">EE</option>
                  <option value="ECE">ECE</option>
                  <option value="BT">BT</option>
                </select> -->
                <label>Branch</label>
            </div>
            <div class="input-box yr">
                <input id="currentYear" class="currentYear" type="number" name="" required="">
                <label>Current Year</label>
            </div>
            <div class="input-box sem">
                <input id="currentSem" class="currentSem" type="number" name="" required="">
                <label>Current Semester</label>
            </div>
        </div>

        <div class="submitBox">
            <input id="submit" class="submit" type="submit" name="" value="Submit">
        </div>
    </form>
    
      <div class="bottom">
        <a href="/studentLogin">Login</a>
      </div>
    </div>
    </div>
    
    <div id="logged-in">
    </div>  
</body>
</html>